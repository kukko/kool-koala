{
  "include": ["src/**/*"],
  "references": [
    {
      "path": "./tsconfig.test.json"
    }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "target": "ES6",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true
  }
}
